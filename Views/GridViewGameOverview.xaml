<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    mc:Ignorable="d">

    <Style TargetType="{x:Type GridViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GridViewGameOverview}">
				    <Border Padding="0,0,0,0" BorderBrush="{DynamicResource PanelSeparatorBrush}"
                            d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}">
						<Border.Style>
							<Style TargetType="Border">
								<Setter Property="BorderThickness" Value="1,0,0,0" />
								<Style.Triggers>
									<DataTrigger Binding="{Settings GridViewDetailsPosition}" Value="Left">
										<Setter Property="BorderThickness" Value="0,0,1,0" />
									</DataTrigger>
									<DataTrigger Binding="{Settings ShowPanelSeparators}" Value="False">
										<Setter Property="BorderThickness" Value="0" />
									</DataTrigger>
								</Style.Triggers>
							</Style>
						</Border.Style>
												
						<ScrollViewer HorizontalScrollBarVisibility="Disabled"
									  VerticalScrollBarVisibility="Auto"
									  Style="{DynamicResource DetailsScrollViewer}"
									  d:DesignWidth="1280"
									  d:DesignHeight="1280"
									  d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}">
							<Grid>
							
								<StackPanel Tag="{PluginSettings Plugin=BackgroundChanger, Path=HasDataBackground}">
									<StackPanel.Style>
										<Style TargetType="{x:Type StackPanel}">
											<Setter Property="Visibility" Value="Visible" />
											<Style.Triggers>
												<DataTrigger Binding="{Binding ElementName=BackgroundChanger_PluginBackgroundImage, Path=Visibility}" Value="Visible">
													<Setter Property="Visibility" Value="Collapsed" />
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</StackPanel.Style>

									<FadeImage x:Name="PART_ImageBackground" Stretch="Uniform" 
											   HorizontalAlignment="Center" VerticalAlignment="Top">
										<FadeImage.ImageOpacityMask>
											<RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0" RadiusX="2" RadiusY="0.9">
												<RadialGradientBrush.GradientStops>
													<GradientStop Color="Black" Offset="0.3" />
													<GradientStop Color="Transparent" Offset="1" />
												</RadialGradientBrush.GradientStops>
											</RadialGradientBrush>
										</FadeImage.ImageOpacityMask>
									</FadeImage>
								</StackPanel>

								<!-- BackgroundChanger plugin background -->
								<ContentControl x:Name="BackgroundChanger_PluginBackgroundImage"
										HorizontalAlignment="Center" VerticalAlignment="Top" />
							
								<!-- <FadeImage x:Name="PART_ImageBackground" Stretch="Uniform"
										   HorizontalAlignment="Center" VerticalAlignment="Top">
									<FadeImage.ImageOpacityMask>
										<RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0" RadiusX="2" RadiusY="0.9">
											<RadialGradientBrush.GradientStops>
												<GradientStop Color="Black" Offset="0.3" />
												<GradientStop Color="Transparent" Offset="1" />
											</RadialGradientBrush.GradientStops>
										</RadialGradientBrush>
									</FadeImage.ImageOpacityMask>
								</FadeImage> -->
								
								<ContentControl x:Name="DuplicateHider_ContentControl" Panel.ZIndex="1"
                                            VerticalAlignment="Top" 
                                            HorizontalAlignment="Center" 
                                            Margin="0,10,0,0" 
                                            Tag="{DynamicResource DuplicateHider_ContentControlHeader_Style}" />
								
								<Grid HorizontalAlignment="Left"
									  VerticalAlignment="top"
									  Margin="20,10,20,0">
									  							
									<DockPanel>	
										<!-- LibraryManagement plugin age rating -->
										<StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1">											
											<ContentControl x:Name="LibraryManagement_PluginAgeRating" Height="50"
															Margin="0,0,10,0" Grid.Column="0" Grid.Row="1" 
															HorizontalAlignment="Left" VerticalAlignment="Top"/>
										</StackPanel>
												
										<!-- CheckLocalizations flags -->
										<StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2"
													Tag="{PluginSettings Plugin=CheckLocalizations, Path=EnableIntegrationFlags}">
											<StackPanel.Style>
												<Style TargetType="{x:Type StackPanel}">
													<Setter Property="Visibility" Value="Collapsed" />
													<Style.Triggers>
														<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
															<Setter Property="Visibility" Value="Visible" />
														</DataTrigger>
													</Style.Triggers>
												</Style>
											</StackPanel.Style>

											<Border Padding="5"
													BorderBrush="{DynamicResource NormalBorderBrush}"
													CornerRadius="{DynamicResource ControlCornerRadius}"
													BorderThickness="{DynamicResource ControlBorderThickness}" 
													Background="{DynamicResource ButtonBackgroundBrush}"  
													Tag="{PluginSettings Plugin=CheckLocalizations, Path=HasData}">
												<Border.Style>
													<Style TargetType="{x:Type Border}">
														<Setter Property="Visibility" Value="Visible" />
														<Style.Triggers>
															<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False">
																<Setter Property="Visibility" Value="Collapsed" />
															</DataTrigger>
														</Style.Triggers>
													</Style>
												</Border.Style>

												<StackPanel Orientation="Horizontal">
													<TextBlock Text="{DynamicResource LOCCheckLocalizationsLocalizations}" FontSize="14"
															   Foreground="{DynamicResource TextBrush}"
															   Margin="5,0,5,0" VerticalAlignment="Center"
															   Visibility="{DynamicResource CL_ShowLocalizationsLabel}" />
													<ContentControl x:Name="CheckLocalizations_PluginFlags" Height="26" />
												</StackPanel>
											</Border>
										</StackPanel>
										
										<!-- LibraryManagement plugin features list -->
										<StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="3" 
													Tag="{PluginSettings Plugin=LibraryManagement, Path=EnableIntegrationFeatures}">
											<StackPanel.Style>
												<Style TargetType="{x:Type StackPanel}">
													<Setter Property="Visibility" Value="Collapsed" />
													<Style.Triggers>
														<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
															<Setter Property="Visibility" Value="Visible" />
														</DataTrigger>
													</Style.Triggers>
												</Style>
											</StackPanel.Style>

											<Border Padding="5" Height="38"
													BorderBrush="{DynamicResource NormalBorderBrush}"
													CornerRadius="{DynamicResource ControlCornerRadius}"
													BorderThickness="{DynamicResource ControlBorderThickness}" 
													Background="{DynamicResource ButtonBackgroundBrush}"  
													Tag="{PluginSettings Plugin=LibraryManagement, Path=HasData}">
												<Border.Style>
													<Style TargetType="{x:Type Border}">
														<Setter Property="Visibility" Value="Visible" />
														<Style.Triggers>
															<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False">
																<Setter Property="Visibility" Value="Collapsed" />
															</DataTrigger>
														</Style.Triggers>
													</Style>
												</Border.Style>

												<StackPanel Orientation="Horizontal">
													<TextBlock Text="{DynamicResource LOCFeaturesLabel}" FontSize="14"
															   Foreground="{DynamicResource TextBrush}"
															   Margin="5,0,5,0" VerticalAlignment="Center"
															   Visibility="{DynamicResource LM_ShowFeaturesLabel}" />
													<ContentControl x:Name="LibraryManagement_PluginFeaturesIconList" Height="26" />
												</StackPanel>
											</Border>
										</StackPanel>
										
										<!-- GameActivity AvgFps -->
										<StackPanel Grid.Column="4"
													Tag="{PluginStatus Plugin=playnite-gameactivity-plugin, Status=Installed}">
											<StackPanel.Style>
												<Style TargetType="{x:Type StackPanel}">
													<Setter Property="Visibility" Value="{DynamicResource GA_ShowAvgFps}" />
													<Style.Triggers>
														<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False">
															<Setter Property="Visibility" Value="Collapsed" />
														</DataTrigger>
														<DataTrigger Binding="{PluginSettings Plugin=GameActivity, Path=AvgFpsAllSession}" Value="0">
															<Setter Property="Visibility" Value="Collapsed" />
														</DataTrigger>
													</Style.Triggers>
												</Style>
											</StackPanel.Style>

											<Border Padding="5" Height="38"
													BorderBrush="{DynamicResource NormalBorderBrush}"
													CornerRadius="{DynamicResource ControlCornerRadius}"
													BorderThickness="{DynamicResource ControlBorderThickness}" 
													Background="{DynamicResource ButtonBackgroundBrush}">
												<Border.Style>
													<Style TargetType="{x:Type Border}">
														<Setter Property="Visibility" Value="Visible" />
														<Style.Triggers>
															<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False">
																<Setter Property="Visibility" Value="Collapsed" />
															</DataTrigger>
														</Style.Triggers>
													</Style>
												</Border.Style>

												<StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
													<Label Content="{DynamicResource LOCGameActivityAvgFps}" 
																   HorizontalAlignment="Center" />
													<Label Margin="10,0,0,0" 
																   Content="{PluginSettings Plugin=GameActivity, Path=AvgFpsAllSession}"
																   HorizontalAlignment="Center" />
												</StackPanel>
											</Border>
										</StackPanel>
									</DockPanel>
								</Grid>
								
								<Grid HorizontalAlignment="Right"
									  VerticalAlignment="top"
									  Margin="20,12,25,0">
									  
									<Button HorizontalAlignment="Right" 
											Content="&#9747;" FontFamily="Courier New"
											Style="{DynamicResource PlayButton}"
											Command="{MainViewModel CloseGameSideBarCommand}"
											DockPanel.Dock="Top" Margin="0,0,0,0" />											
									
									<!-- Age Ratings -->
									<ItemsControl ItemsSource="{Binding Game.AgeRatings}" Margin="0,0,40,0"												  
												  Visibility="{DynamicResource DE_ShowAgeRating}"
												  VerticalAlignment="Top" HorizontalAlignment="Left"
												  IsTabStop="False" IsEnabled="False">
										<ItemsControl.ItemsPanel>
											<ItemsPanelTemplate>
												<StackPanel Orientation="Horizontal" Height="Auto"/>
											</ItemsPanelTemplate>
										</ItemsControl.ItemsPanel>
										
										<ItemsControl.ItemTemplate>
											<DataTemplate>
												<Grid Margin="0">
													<Grid.ColumnDefinitions>
														<ColumnDefinition Width="auto" />
													</Grid.ColumnDefinitions>
													
													<Border x:Name="RatingIcon" Background="White" CornerRadius="5"
															HorizontalAlignment="Center" VerticalAlignment="Center"
															Height="38" BorderThickness="1"
															Width="Auto"
															Margin="1" Visibility="Visible">
														<Image Grid.Column="0" x:Name="RatingIconImage"
															   RenderOptions.BitmapScalingMode="Fant"
															   SnapsToDevicePixels="True"
															   Margin="2"
															   Source="{ThemeFileBinding Name, PathFormat='Images/AgeRatings/{0}.png'}" />
													</Border>
												</Grid>

												<DataTemplate.Triggers>
													<DataTrigger Binding="{Binding ElementName=RatingIconImage, Path=Source}" Value="{x:Null}">
														<Setter Property="Visibility" Value="Collapsed"/>
													</DataTrigger>
												</DataTemplate.Triggers>
											</DataTemplate>
										</ItemsControl.ItemTemplate>
									</ItemsControl>
											
								</Grid>
								
								<Grid HorizontalAlignment="Stretch" Margin="20,0,20,0">
									<Grid.RowDefinitions>
										<RowDefinition Height="{Settings CalculatedGameDetailsIndentation}"/>
										<RowDefinition Height="Auto"/>
										<RowDefinition Height="Auto"/>
										<RowDefinition Height="*"/>
									</Grid.RowDefinitions>                                

									<DockPanel Margin="0,20,0,15" MaxWidth="1024" Grid.Row="1"
											   Background="Transparent">                                    
										<Image Name="PART_ImageCover" VerticalAlignment="Bottom"
												DockPanel.Dock="Right"
												Height="{Settings GameDetailsCoverHeight}"
												StretchDirection="Both" Stretch="Uniform"
												RenderOptions.BitmapScalingMode="Fant" />
										<StackPanel VerticalAlignment="Bottom" DockPanel.Dock="Left">
											<DockPanel>
												<Image Name="PART_ImageIcon" MaxHeight="48" MaxWidth="48"
														DockPanel.Dock="Left" Margin="0,0,10,0"
														VerticalAlignment="Center"
														RenderOptions.BitmapScalingMode="Fant" />
												<TextBlock FontFamily="{DynamicResource FontFamily}"
															Text="{Binding Game.DisplayName}" DockPanel.Dock="Left"
															FontSize="{DynamicResource FontSizeLargest}" Margin="0,0,10,0" TextWrapping="Wrap"
															VerticalAlignment="Center"
															Foreground="{DynamicResource TextBrush}">
													<TextBlock.Effect>
														<DropShadowEffect ShadowDepth="3" RenderingBias="Quality"/>
													</TextBlock.Effect>
												</TextBlock>
											</DockPanel>
											<StackPanel HorizontalAlignment="Left" VerticalAlignment="Top"
														Orientation="Horizontal" Margin="0,15,0,0">
												<Button Name="PART_ButtonPlayAction"
														Width="80" Height="40" Style="{DynamicResource PlayButton}" />
												<Button Name="PART_ButtonContextAction" 
														Width="80" Height="40" />
												<Button Name="PART_ButtonMoreActions"
														Content="{DynamicResource LOCMoreAction}"
														Width="80" Height="40" Margin="10,0,0,0" />
												<Button x:Name="PART_ButtonEditGame"
														Margin="10,0,0,0" Height="40" Focusable="False"
														Content="&#xeded;" FontFamily="{DynamicResource FontIcoFont}">
													<Button.Style>
														<Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
															<Setter Property="Visibility" Value="Hidden" />
															<Style.Triggers>
																<DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=DockPanel}}"  Value="True">
																	<Setter Property="Visibility" Value="Visible" />
																</DataTrigger>
															</Style.Triggers>
														</Style>
													</Button.Style>
												</Button>
												
												<!-- SystemChecker plugin button -->
												<ContentControl x:Name="SystemChecker_PluginButton" Height="40" Margin="10,0,0,0" 
																FontSize="16" Grid.Column="9"
																MinWidth="{Binding ElementName=PART_ButtonEditGame, Path=ActualWidth}"
																Visibility="{PluginStatus Plugin=playnite-systemchecker-plugin, Status=Installed}" />
																
												<!-- CheckLocalizations plugin button -->
												<ContentControl x:Name="CheckLocalizations_PluginButton" Height="40" Margin="10,0,0,0" 
																Grid.Column="3" FontSize="14"
																Width="{Binding ElementName=PART_ButtonEditGame, Path=ActualWidth}"
																Visibility="{PluginStatus Plugin=playnite-checklocalizations-plugin, Status=Installed}" />
																
												<!-- CheckDlc plugin button -->
												<ContentControl x:Name="CheckDlc_PluginButton" Height="40" Margin="10,0,0,0" 
																Grid.Column="3" FontSize="14"
																Width="{Binding ElementName=PART_ButtonEditGame, Path=ActualWidth}"
																Visibility="{PluginStatus Plugin=playnite-checkdlc-plugin, Status=Installed}" />
																
												<!-- HowLongToBeat plugin button -->
												<ContentControl x:Name="HowLongToBeat_PluginButton" Height="40" Margin="10,0,0,0"
																FontSize="12" Grid.Column="6"
																MinWidth="{Binding ElementName=PART_ButtonEditGame, Path=ActualWidth}"
																Visibility="{PluginStatus Plugin=playnite-howlongtobeat-plugin, Status=Installed}" />														
												
												<!-- ScreenshootsVisualizer plugin button -->
												<ContentControl x:Name="ScreenshotsVisualizer_PluginButton" Height="40" Margin="10,0,0,0"
																FontSize="16" Grid.Column="5"
																MinWidth="{Binding ElementName=PART_ButtonEditGame, Path=ActualWidth}"
																Visibility="{PluginStatus Plugin=playnite-screenshotsvisualizer-plugin, Status=Installed}">
													<ContentControl.Style>
														<Style TargetType="{x:Type ContentControl}">
															<Style.Triggers>
																<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
																	<Setter Property="Width" Value="150" />
																</DataTrigger>
															</Style.Triggers>
														</Style>
													</ContentControl.Style>
												</ContentControl>

												<!-- SuccessStory Button -->
												<StackPanel Visibility="{DynamicResource SS_ShowButton}">
													<ContentControl x:Name="SuccessStory_PluginButton" Height="40" Margin="10,0,0,0" FontSize="18"
																	Tag="{PluginStatus Plugin=playnite-successstory-plugin, Status=Installed}">
														<ContentControl.Style>
															<Style TargetType="{x:Type ContentControl}">
																<Style.Triggers>
																	<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False">
																		<Setter Property="Visibility" Value="Collapsed" />
																	</DataTrigger>
																</Style.Triggers>
															</Style>
														</ContentControl.Style>
													</ContentControl>
												</StackPanel>

												<!-- GameActivity Button -->
												<StackPanel Visibility="{DynamicResource GA_ShowButton}">
													<ContentControl x:Name="GameActivity_PluginButton" Height="40" Margin="10,0,0,0" FontSize="18"
																	Tag="{PluginStatus Plugin=playnite-gameactivity-plugin, Status=Installed}">
														<ContentControl.Style>
															<Style TargetType="{x:Type ContentControl}">
																<Style.Triggers>
																	<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False">
																		<Setter Property="Visibility" Value="Collapsed" />
																	</DataTrigger>
																</Style.Triggers>
															</Style>
														</ContentControl.Style>
													</ContentControl>
												</StackPanel>										
											</StackPanel>
										</StackPanel>
									</DockPanel>

									<DockPanel MaxWidth="1024" Grid.Row="2">
																		
										<!-- CheckLocalizations list languages -->
										<StackPanel Name="PART_CheckLocContenerListLanguages" DockPanel.Dock="Top" Margin="5,0,5,15" 
													Tag="{PluginSettings Plugin=CheckLocalizations, Path=EnableIntegrationListLanguages}">
											<StackPanel.Style>
												<Style TargetType="{x:Type StackPanel}">
													<Setter Property="Visibility" Value="Collapsed" />
													<Style.Triggers>
														<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
															<Setter Property="Visibility" Value="Visible" />
														</DataTrigger>
													</Style.Triggers>
												</Style>
											</StackPanel.Style>

											<StackPanel Visibility="{Binding ElementName=CheckLocalizations_PluginListLanguages, Path=Content.Visibility}">
												<TextBlock Text="{DynamicResource LOCCheckLocalizationsLocalizations}" Margin="0,15,0,5" Style="{DynamicResource BaseTextBlockStyle}" />
												<Separator Background="{DynamicResource PanelSeparatorBrush}" />
												<ContentControl x:Name="CheckLocalizations_PluginListLanguages" Margin="0,5,0,5"
																MinHeight="60" MaxHeight="300"
																Width="{Binding ElementName=PART_CheckLocContenerListLanguages, Path=ActualWidth}" />
											</StackPanel>
										</StackPanel>
																		
										<!-- HowLongToBeat progress bar -->
										<StackPanel Name="PART_HltbProgressBar" DockPanel.Dock="Top" Margin="5,0,5,15" 
													Tag="{PluginSettings Plugin=HowLongToBeat, Path=EnableIntegrationProgressBar}">
											<StackPanel.Style>
												<Style TargetType="{x:Type StackPanel}">
													<Setter Property="Visibility" Value="Collapsed" />
													<Style.Triggers>
														<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
															<Setter Property="Visibility" Value="Visible" />
														</DataTrigger>
													</Style.Triggers>
												</Style>
											</StackPanel.Style>

											<StackPanel Visibility="{Binding ElementName=HowLongToBeat_PluginProgressBar, Path=Content.Visibility}">
												<TextBlock Text="{DynamicResource LOCHowLongToBeat}" Margin="0,15,0,5" Style="{DynamicResource BaseTextBlockStyle}" FontWeight="Bold"/>
												<Separator Background="{DynamicResource PanelSeparatorBrush}" />
												<ContentControl x:Name="HowLongToBeat_PluginProgressBar" Margin="0,5,0,5" Height="50"
																Width="{Binding ElementName=PART_HltbProgressBar, Path=ActualWidth}" />
											</StackPanel>
										</StackPanel>

										<!-- SuccessStory elements -->
                                        <StackPanel Name="PART_SucessStoryCompact" DockPanel.Dock="Top" Margin="5,0,5,15" 
													Tag="{PluginSettings Plugin=SuccessStory, Path=EnableIntegrationCompact}">
											<StackPanel.Style>
												<Style TargetType="{x:Type StackPanel}">
													<Setter Property="Visibility" Value="Collapsed" />
													<Style.Triggers>
														<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
															<Setter Property="Visibility" Value="Visible" />
														</DataTrigger>
													</Style.Triggers>
												</Style>
											</StackPanel.Style>

											<StackPanel Visibility="{Binding ElementName=SuccessStory_PluginCompactList, Path=Content.Visibility}">
												<TextBlock Text="{DynamicResource LOCSuccessStoryAchievements}" Margin="0,15,0,5" Style="{DynamicResource BaseTextBlockStyle}" FontWeight="Bold"/>
												<Separator Background="{DynamicResource PanelSeparatorBrush}" />
												<ContentControl x:Name="SuccessStory_PluginCompactList" Margin="0,5,0,5" Height="100"
																Width="{Binding ElementName=PART_SucessStoryCompact, Path=ActualWidth}"/>
											</StackPanel>
										</StackPanel>
										
										<!-- GameActivity elements -->
										<StackPanel Name="PART_GaElements" DockPanel.Dock="Top" Margin="5,0,5,15" 
													Tag="{PluginStatus Plugin=GameActivity, Status=Installed}">
											<!-- GameActivity time chart -->		
											<StackPanel Visibility="{Binding ElementName=GameActivity_PluginChartTime, Path=Content.Visibility}">
												<TextBlock Text="{DynamicResource LOCGameActivitiesTitle}"
														   Style="{DynamicResource BaseTextBlockStyle}"
														   FontWeight="Bold"/>
												<Separator Background="{DynamicResource PanelSeparatorBrush}" />												
												<ContentControl x:Name="GameActivity_PluginChartTime" Margin="0,5,0,10" MinHeight="50" MaxHeight="300" />
											</StackPanel>
											<!-- GameActivity log chart - Uncoment this section to view in Grid View
											<StackPanel Visibility="{Binding ElementName=GameActivity_PluginChartLog, Path=Content.Visibility}">
												<Separator Background="{DynamicResource PanelSeparatorBrush}" /> 												
												<ContentControl x:Name="GameActivity_PluginChartLog" Margin="0,5,0,5" MinHeight="50" MaxHeight="300" />
											</StackPanel> -->
										</StackPanel>
													
										<StackPanel DockPanel.Dock="Left" Width="300"
													Margin="2,0,0,0">
											<StackPanel.Resources>
												<Style TargetType="ItemsControl">
													<Setter Property="VerticalAlignment" Value="Center" />
												</Style>
												<Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
													<Setter Property="Margin" Value="0,4,8,4" />
													<Setter Property="VerticalAlignment" Value="Top" />
													<Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
												</Style>
												<Style TargetType="Button" BasedOn="{StaticResource PropertyItemButton}" />
											</StackPanel.Resources>

											<TextBlock Text="{DynamicResource LOCGameDetails}" Margin="0,15,0,5"
														Style="{DynamicResource BaseTextBlockStyle}" FontWeight="Bold"/>

											<Separator Background="{DynamicResource PanelSeparatorBrush}" />
												
											<GridEx Margin="0,5,0,10"
													ColumnCount="2" StarColumns="1"
													RowCount="21" AutoLayoutColumns="2">
												<Grid.Resources>
													<Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
												</Grid.Resources>

												<Label Name="PART_ElemPlayTime" Content="{DynamicResource LOCTimePlayed}" />
												<TextBlock Name="PART_TextPlayTime" VerticalAlignment="Center" />

												<Label Name="PART_ElemLastPlayed" Content="{DynamicResource LOCLastPlayed}" />
												<TextBlock Name="PART_TextLastActivity" VerticalAlignment="Center" />

												<Label Name="PART_ElemCompletionStatus" Content="{DynamicResource LOCCompletionStatus}" />
												<Button Name="PART_ButtonCompletionStatus" VerticalAlignment="Center" />

												<Label Name="PART_ElemLibrary" Content="{DynamicResource LOCGameProviderTitle}" />
												<Button Name="PART_ButtonLibrary" VerticalAlignment="Center" />

												<Label Name="PART_ElemPlatform" Content="{DynamicResource LOCPlatformTitle}" />
												<ItemsControl Name="PART_ItemsPlatforms" />

												<Label Name="PART_ElemGenres" Content="{DynamicResource LOCGenreLabel}" />
												<ItemsControl Name="PART_ItemsGenres"  />

												<Label Name="PART_ElemDevelopers" Content="{DynamicResource LOCDeveloperLabel}" />
												<ItemsControl Name="PART_ItemsDevelopers" />

												<Label Name="PART_ElemPublishers" Content="{DynamicResource LOCPublisherLabel}" />
												<ItemsControl Name="PART_ItemsPublishers" />

												<Label Name="PART_ElemReleaseDate" Content="{DynamicResource LOCGameReleaseDateTitle}" />
